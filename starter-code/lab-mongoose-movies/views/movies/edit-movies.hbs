
<h2>edit the movie</h2>

<form action="/movies/{{movie._id}}/update" method="post">

    <label for="title">TITLE</label>
    {{!-- value is the prefill --}}
    <input type="text" name="title" id="title" value = "{{movie.title}}">

    <label for="genre">genere</label>
    <input type="text" name="genre" id="genre" value = "{{movie.genre}}">

    <label for="plot">plot</label>
    {{!-- <input type="text" name="plot" id="plot" value = "{{movie.plot}}"> --}}
    <textarea name="content" cols="30" rows="10" name="plot" type="text" value = "{{movie.plot}}"></textarea>


 <label for="actors">Actors: </label>
    
        {{#each allTheCelebrities}}
            {{#if this.yes}}
                <label><input checked type="checkbox" name="editedActors" id="Actors" value="{{this._id}}">{{this.name}}</label>
            {{/if}}
 
            {{#unless this.yes}}
                <label><input type="checkbox" name="editedActors" id="Actors" value="{{this._id}}">{{this.name}}</label>
            {{/unless}}
        {{/each}} 

    <button type="submit">save changes</button>

</form>